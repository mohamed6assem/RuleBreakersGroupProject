<%- include ../partials/header.ejs %>

<!-- Content for the Add_Edit page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <input type="hidden"
                        name="id"
                        value="<%= tournament._id %>"
                    >
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control"
                        id="tournamentNameTextField"
                        placeholder="Enter the Tournament Name"
                        name="name" 
                        value="<%= tournament.name %>"
                        required>
                </div>
                
                <div class="form-group">
                    <label for="descriptionTextField">Description</label>
                    <input type="text"
                    class="form-control"
                    id="descriptionTextField"
                    placeholder="Enter a short description of the tournament. e.g. 1-on-1 Basketball Tournament"
                    name="description" 
                    value="<%= tournament.description %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="teamTextField">Status</label>
                    <input type="text"
                    class="form-control"
                    id="tournamentStatusTextField"
                    placeholder="Enter the Status of the Tournament"
                    name="status" 
                    value="<%= tournament.status %>"
                    required>
                </div>

                <br/>
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> 
                    Submit
                </button>
                
                <a href="/tournaments/list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> 
                    Cancel
                </a>

            </form>
        </div>

    </div>
</div>

<%- include ../partials/footer.ejs %>